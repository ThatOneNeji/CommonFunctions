{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "include": "./lib",
        "includePattern": ".js$",
        "excludePatterns": "(^|\\/|\\\\)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": false,
        "systemName": "Common Functions",
        "monospaceLinks": false,
        "dateFormat": "YYYY/MM/DD",
        "navType": "inline",
        "theme": "slate",
        "linenums": true,
        "footer": "",
        "inverseNav": false,
        "default": {
            "outputSourceFiles": true
        }
    },
    "opts": {
        "template": "./node_modules/ink-docstrap/template",
        "encoding": "utf8",
        "destination": "./documentation/",
        "recurse": true
    }
}